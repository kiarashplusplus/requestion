<!DOCTYPE html>
<html lang="en" dir="ltr">
  {{> head}}
  <body>
    <div id="root"></div>
    <script type="text/babel">

const {
  colors,
  Card,CardActionArea, CardContent,CardActions,Button,CardMedia,
  CssBaseline,
  MuiThemeProvider,
  Typography,
  Container,
  makeStyles,
  createMuiTheme,
  Box,
  SvgIcon,
  Link,
} = MaterialUI;

const theme = createMuiTheme({
  palette: {
    type: 'dark',
  },
});

const useStyles = makeStyles(theme => ({
  root: {
    margin: theme.spacing(6, 0, 3),
  },
  card: {
    minWidth: 275,
  },
  title: {
    fontSize: 14,
  },
  pos: {
    marginBottom: 12,
  },
}));

function NewsCard() {
  const classes = useStyles();
  return (
    <Card className={classes.card}>
      <CardActionArea>
        <CardMedia
          component="img"
          alt="{{title}}"
          height="140"
          image="{{{image}}}"
          title="{{title}}"
        />
        <CardContent>
          <Typography gutterBottom variant="h5" component="h2">
            {{title}}
          </Typography>
          <Typography variant="body2" color="textSecondary" component="p">
            {{snippet}}
          </Typography>
        </CardContent>
      </CardActionArea>
    </Card>
  );
}

function App() {
  return (
    <Container maxWidth="sm">
      <div id='shoot'>
        <NewsCard />   
      </div>
    </Container>
  );
}

ReactDOM.render(
  <MuiThemeProvider theme={theme}>
    <CssBaseline />
    <App />
  </MuiThemeProvider>,
  document.querySelector('#root'),
);
    </script>
  </body>
</html>